{
  "name": "nextjs-reactnative-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:mobile": "turbo dev --filter=mobile",
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "build:mobile": "turbo build --filter=mobile",
    "start": "turbo start",
    "test": "turbo test",
    "test:web": "turbo test --filter=web",
    "test:mobile": "turbo test --filter=mobile",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "clean:cache": "turbo clean",
    "clean:deps": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "fresh": "npm run clean && npm install",
    "check-all": "turbo lint:check typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3",
    "@types/node": "^20.19.13",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "turbo": "^2.2.3",
    "typescript": "^5",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "ansi-styles": "^4.3.0"
  },
  "packageManager": "npm@10.2.4",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.13"
  }
}
